// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/* --- Models (SQLite-safe versions) --- */

model posts {
  id          Int       @id @default(autoincrement())
  created_at  DateTime  @default(now())
  user_id     Int?
  health_id   Int?
  post_title  String?
  date_time   DateTime? @default(now())
  post_body   String?
  likes_count Int?      @default(0)
}

model relationships {
  id               Int      @id @default(autoincrement())
  created_at       DateTime @default(now())
  first_id_joined  Int?
  second_id_joined Int?
}

model users {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  name       String?
  email      String?  @unique
  username   String?
  password   String?
}

model healthdata {
  id       Int     @id @default(autoincrement())
  user_id  Int?
  steps    Int?
  stretch  Int?
  exercise Int?
  water    Int?
  rating   Int?
  comment  String?
}
