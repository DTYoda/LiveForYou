// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/* --- Models (SQLite-safe versions) --- */

model posts {
  id              Int      @id @default(autoincrement())   // was BigInt + autoincrement
  created_at      DateTime @default(now())                  // removed @db.Timestamptz
  user_id         String?                                   // removed @db.Uuid
  post_title      String?
  date_time       DateTime?
  post_body       String?
  likes_count     Int?     @default(0)
  dislikes_count  Int?     @default(0)
  favorites_count Int?     @default(0)
}

model relationships {
  id               Int      @id @default(autoincrement())   // was BigInt
  created_at       DateTime @default(now())
  first_id_joined  String?
  second_id_joined String?
}

model users {
  id         String   @id @default(uuid())                  // replaced dbgenerated("gen_random_uuid()")
  created_at DateTime @default(now())
  name       String?
  email      String?  @unique                               // recommended for login lookups
  username   String?
  password   String?
}
